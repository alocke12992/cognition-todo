{
  "name": "coginition-todo-backend",
  "version": "1.0.0",
  "description": "Backend for coginition-todo app",
  "main": "dist/server.js",
    "scripts": {
      "build": "tsoa spec-and-routes && tsc",
      "start": "node dist/server.js",
      "dev": "tsoa spec-and-routes && ts-node src/server.ts",
      "dev:watch": "nodemon",
      "migrate": "ts-node src/migrations/migrate-from-json.ts"
    },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "tsoa": "^5.1.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
